<div class="container">
<p id="notice"><%= notice %></p>

<p>
  <legend>Title: <%= @quiz.title %></legend>
</p>

<p>
  <b>Date: <%= @quiz.date %></b>
</p>

 <p>
    <h3>Number of Questions: <%= @quiz.questions.count %></h3>
  </p> 
 
<h4>Questions</h4>
<% @quiz.questions.each do |questions| %>
  <p>
    <%= questions.question %>
  </p>
  <ol>
    <% questions.answers.each do |answers| %>
        <li><%= answers.answer %></li>
    <% end %>
  </ol>
<% end %> 



<%= link_to 'Edit', edit_quiz_path(@quiz) %> |
<%= link_to 'Back', quizzes_path %>
<br>
<br>
</div>
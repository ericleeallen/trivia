<fieldset>
  <%= f.label :question %>
  <%= f.hidden_field :_destroy %>
  <%= link_to "Delete Question", '#', class: "remove_fields" %><br/>
  <%= f.text_area :question, rows: 2, class: "input-xxlarge" %><br />

  <label>Answers</label>
  <%= f.fields_for :answers do |builder| %>
    <%= render 'answer_fields', :f => builder %>
  <% end %>
  <%= link_to_add_fields "Add Answer", f, :answers %>
</fieldset>
<br>
<div class="container">
  <h1>All quizzes</h1>

  <table class="table table-striped">
    <tr>
      <th>Title</th>
      <th>Difficulty</th>
      <th>Date</th>
      <th></th>
      <th></th>
      <th></th>
    </tr>

  <% @quizzes.each do |quiz| %>
    <tr>
      <td><%= quiz.title %></td>
      <td><%= quiz.difficulty %></td>
      <td><%= quiz.date %></td>
      <td><%= link_to 'Show', quiz, class: "btn btn-success" %></td>
      <td><%= link_to 'Edit', edit_quiz_path(quiz), class: "btn btn-warning" %></td>
      <td><%= link_to 'Destroy', quiz, method: :delete, data: { confirm: 'Are you sure?' }, class: 'btn btn-danger' %></td>
    </tr>
  <% end %>
  </table>

  <br />

  <%= link_to 'New Quiz', new_quiz_path %>
</div>
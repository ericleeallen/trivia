<p id="notice"><%= notice %></p>

<p>
  <b>Title:</b>
  <%= @quiz.title %>
</p>

<p>
  <b>Date:</b>
  <%= @quiz.date %>
</p>

  <p>
    <h1>Number of Questions</h1>
    <%= @quiz.questions.count %>
  </p> 
 
<h2>Questions</h2>
<% @quiz.questions.each do |questions| %> 

  <p>
    <b>Question:</b>
    <%= questions.question %>
  </p>
  <ol>
    <% questions.answers.each do |answers| %>
      <p>
        <li><%= answers.answer %></li>
      </p>
    <% end %>
  </ol>
<% end %> 






<%= link_to 'Edit', edit_quiz_path(@quiz) %> |
<%= link_to 'Back', quizzes_path %>
